<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <ImageView
        android:id="@+id/firstBallView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="344dp"
        app:layout_constraintBottom_toTopOf="@+id/sortButton"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/secondBallView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="344dp"
        app:layout_constraintBottom_toTopOf="@+id/sortButton"
        app:layout_constraintStart_toEndOf="@+id/firstBallView"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/thirdBallView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="344dp"
        app:layout_constraintBottom_toTopOf="@+id/sortButton"
        app:layout_constraintStart_toEndOf="@+id/secondBallView"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/fourthBallView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="344dp"
        app:layout_constraintBottom_toTopOf="@+id/sortButton"
        app:layout_constraintStart_toEndOf="@+id/thirdBallView"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/fifthBallView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="344dp"
        app:layout_constraintBottom_toTopOf="@+id/sortButton"
        app:layout_constraintStart_toEndOf="@+id/fourthBallView"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/sixthBallView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="344dp"
        app:layout_constraintBottom_toTopOf="@+id/sortButton"
        app:layout_constraintStart_toEndOf="@+id/fifthBallView"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/sortButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/ocean_blue"
        android:text="정렬"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/AddFavNumButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_favorite_24" />

</androidx.constraintlayout.widget.ConstraintLayout>